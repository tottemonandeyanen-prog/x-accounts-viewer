{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",                // ←ここをNodeNextにしたら赤線も消えます
    "moduleResolution": "NodeNext",
    "types": ["node"],
    "lib": ["ES2023"],
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src"]
}
